---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"work" | "projects">;
}

const { data, id, collection } = Astro.props.project;
---

<a
  class="card"
  href={`/${collection}/${id}`}
  aria-label={`View project: ${data.title}`}
>
  <span class="title">{data.title}</span>
  <img
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
  />
  <div class="card-content">
    <p class="description">{data.description || "No description available"}</p>
  </div>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    transition: all 0.3s ease;
    position: relative;
    cursor: pointer;
    height: 100%;
  }

  .card:hover {
    box-shadow: var(--shadow-md);
    scale: 1.015;
    border-color: var(--accent-regular);
  }

  .card::after {
    content: "View Project â†’";
    position: absolute;
    top: 0.8rem;
    right: 0.8rem;
    background: var(--accent-regular);
    color: var(--accent-text-over);
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-size: var(--text-sm);
    opacity: 0;
    transform: translateY(-0.5rem);
    transition: all 0.25s ease;
  }

  .card:hover::after {
    opacity: 1;
    transform: translateY(0);
  }

  .title {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    z-index: 1;
    padding: 0.5rem 1rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
    font-size: var(--text-lg);
    font-weight: 500;
  }

  img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: contain;
  }

  .card-content {
    padding: 1.25rem;
    background: var(--gray-999);
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }

  .description {
    color: var(--gray-300);
    font-size: var(--text-md);
    line-height: 1.4;
    margin: 0;
  }

  .card:hover .view-project {
    background: var(--accent-dark);
  }

  .card:hover .view-project svg {
    opacity: 0;
    transform: translateX(10px);
  }

  .card:hover .view-project::after {
    right: 1rem;
    opacity: 1;
  }

  @media (min-width: 50em) {
    .card {
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }

    .card-content {
      padding: 1.5rem;
    }
  }

  @media (max-width: 49.9em) {
    .description {
      font-size: 0.9rem;
    }
  }
</style>
